<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/game_screen_bgr"
    android:gravity="left"
    android:shrinkColumns="3"
    android:stretchColumns="3" >

    <TextView
        android:id="@+id/level_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="5dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/snakehint_btn"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="70dp"
        android:src="@drawable/snake_hint" />

     <Button
         android:id="@+id/tooltip_btn"
         android:layout_width="170dp"
         android:layout_height="70dp"
         android:layout_above="@+id/snakehint_btn"
         android:layout_alignParentLeft="true"
         android:layout_marginLeft="50dp"
         android:background="@drawable/tooltip"
         android:gravity="top|center"
         android:textColor="#2f2f2f"
         android:textSize="20sp"
         android:textStyle="bold" />

     <Button
         android:id="@+id/goback_btn"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignBottom="@+id/snakehint_btn"
         android:layout_marginBottom="20dp"
         android:layout_marginRight="2dp"
         android:layout_toLeftOf="@+id/gridView1"
         android:background="@drawable/back_btn" />

     <Button
         android:id="@+id/pause_btn"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_alignRight="@+id/replay_btn"
         android:layout_below="@+id/replay_btn"
         android:layout_marginTop="5dp"
         android:layout_marginRight="2dp"
         android:background="@drawable/pasue_btn" />

     <Button
         android:id="@+id/music_btn"
         android:layout_width="40dp"
         android:layout_height="40dp"
         android:layout_above="@+id/goback_btn"
         android:layout_marginBottom="0dp"
         android:layout_marginTop="5dp"
         android:layout_marginRight="2dp"
         android:layout_toLeftOf="@+id/gridView1"
         android:background="@drawable/music_btn" />

    <TextView
         android:id="@+id/result_tv"
         android:layout_width="220dp"
         android:layout_height="wrap_content"
         android:layout_alignParentStart="false"
         android:layout_alignRight="@+id/music_btn"
         android:layout_below="@+id/level_tv"
         android:layout_marginRight="17dp"
         android:paddingLeft="5dp"
         android:layout_marginTop="18dp"
         android:textColor="#7c4300"
         android:textSize="15sp"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/timer_tv"
         android:layout_width="100dp"
         android:layout_height="30dp"
         android:layout_above="@+id/tooltip_btn"
         android:layout_alignRight="@+id/vie_w"
         android:layout_marginBottom="5dp"
         android:layout_marginRight="10dp"
         android:background="#00dd2f"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#ffffff"
         android:textStyle="bold" />

     <ImageView
         android:id="@+id/imageView1"
         android:layout_width="50dp"
         android:layout_height="50dp"
         android:layout_above="@+id/replay_btn"
         android:layout_alignLeft="@+id/tooltip_btn"
         android:src="@drawable/clock" />

     <TextView
         android:id="@+id/vie_w"
         android:layout_width="130dp"
         android:layout_height="wrap_content"
         android:layout_alignBottom="@+id/tooltip_btn"
         android:layout_alignLeft="@+id/snakehint_btn"
         android:layout_marginBottom="20dp"
         android:gravity="center_vertical|center_horizontal"
         android:textColor="#00ff7f"
         android:layout_marginTop="20dp"
         android:textSize="20sp"
         android:textStyle="bold|italic"
         android:layout_below="@+id/imageView1" />

     <TextView
         android:id="@+id/specialw_tv"
         android:layout_width="100dp"
         android:layout_height="wrap_content"
         android:layout_above="@+id/gridView1"
         android:layout_alignLeft="@+id/gridView1"
         android:layout_alignTop="@+id/level_tv"
         android:layout_marginLeft="38dp"
         android:gravity="center"
         android:textAppearance="?android:attr/textAppearanceLarge"
         android:textColor="#000fff"
         android:textSize="20sp" />

 <TextView
         android:id="@+id/score_tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/specialw_tv"
         android:layout_alignBottom="@+id/specialw_tv"
         android:layout_alignParentRight="true"
         android:layout_marginRight="45dp"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textColor="#ffffff"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/bonus_tv"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/specialw_tv"
         android:layout_alignBottom="@+id/specialw_tv"
         android:layout_marginLeft="20dp"
         android:layout_toRightOf="@+id/specialw_tv"
         android:textColor="#f00000"
         android:textSize="20sp"
         android:textStyle="bold" />

 <GridView
     android:id="@+id/gridView1"
     android:layout_width="280dp"
     android:layout_height="280dp"
     android:layout_marginLeft="8dp"
     android:horizontalSpacing="2dp"
     android:numColumns="6"
     android:scrollbars="none"
     android:verticalSpacing="2dp"
     android:layout_centerVertical="true"
     android:layout_toEndOf="@+id/pause_btn">
 </GridView>

    <Button
        android:id="@+id/replay_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="2dp"
        android:background="@drawable/hint_"
        android:layout_alignTop="@+id/tooltip_btn"
        android:layout_toEndOf="@+id/tooltip_btn" />

</RelativeLayout>
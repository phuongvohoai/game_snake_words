<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/congratulation"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btnCongrat_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/btnCongrat_reset"
        android:background="@drawable/back_btn" />

    <Button
        android:id="@+id/btnCongrat_reset"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnCongrat_back"
        android:layout_alignBottom="@+id/btnCongrat_back"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/restart_btn" />

</RelativeLayout>

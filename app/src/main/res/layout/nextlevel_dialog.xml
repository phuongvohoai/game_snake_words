<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="320dp"
    android:layout_height="200dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:src="@drawable/nextlevel_bgr" />

    <TextView
        android:id="@+id/tvMessage_nextlevel"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="57dp"
        android:layout_marginTop="8dp"
        android:autoLink="none"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvText_nextlevel"
        android:layout_width="270dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/bntNext_next"
        android:layout_centerVertical="true"
        android:gravity="right|center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#5e5e5e"
        android:textSize="20sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/btnBack_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignLeft="@+id/tvMessage_nextlevel"
        android:layout_alignParentBottom="true"
        android:background="@drawable/back_btn" />

    <Button
        android:id="@+id/bntNext_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@+id/btnReplay_next"
        android:background="@drawable/foward_" />

    <Button
        android:id="@+id/btnReplay_next"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="18dp"
        android:layout_toRightOf="@+id/btnBack_next"
        android:background="@drawable/restart_btn" />

</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="300dp"
    android:layout_height="120dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/pause_bgr" />

    <TextView
        android:id="@+id/tvMessage_pause"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:autoLink="none"
        android:gravity="center"
        android:paddingBottom="4dp"
        android:paddingLeft="4dp"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnPlay_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnBack_pause"
        android:layout_alignBottom="@+id/btnBack_pause"
        android:layout_centerHorizontal="true"
        android:background="@drawable/play" />

    <Button
        android:id="@+id/btnBack_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/tvMessage_pause"
        android:layout_marginRight="22dp"
        android:layout_marginTop="17dp"
        android:layout_toLeftOf="@+id/btnPlay_pause"
        android:background="@drawable/back_btn" />

    <Button
        android:id="@+id/btnReplay_pause"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBaseline="@+id/btnPlay_pause"
        android:layout_alignBottom="@+id/btnPlay_pause"
        android:layout_marginLeft="24dp"
        android:layout_toRightOf="@+id/btnPlay_pause"
        android:background="@drawable/restart_btn" />

</RelativeLayout>
